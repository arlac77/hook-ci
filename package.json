{
  "name": "hook-ci",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin"
  ],
  "main": "./src/hook-ci-cli.mjs",
  "description": "simple ci to be triggered by git hooks",
  "keywords": [
    "ci",
    "software delivery"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "hook-ci": "bin/hook-ci"
  },
  "scripts": {
    "prepare": "rollup -c",
    "test": "ava --timeout 2m",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme ./src/hook-ci-cli.mjs --section=API",
    "lint": "documentation lint ./src/hook-ci-cli.mjs",
    "package": "npm-pkgbuild --npm-dist --npm-modules pkgbuild pacman makepkg"
  },
  "dependencies": {
    "aggregation-repository-provider": "^2.6.65",
    "bitbucket-repository-provider": "^3.5.27",
    "bufferutil": "^4.0.1",
    "bull": "^3.14.0",
    "commander": "^5.1.0",
    "config-expander": "^11.0.13",
    "execa": "^4.0.2",
    "expression-expander": "^7.0.5",
    "gitea-repository-provider": "^1.10.24",
    "github-repository-provider": "^7.9.24",
    "globby": "^11.0.0",
    "graphql": "^15.0.0",
    "js-yaml": "^3.14.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.12.0",
    "koa-better-router": "^2.1.1",
    "koa-bodyparser": "^4.3.0",
    "koa-github-hook-handler": "^1.4.6",
    "koa-graphql": "^0.8.0",
    "koa-jwt": "^4.0.0",
    "koa-mount": "^4.0.0",
    "ldapts": "^2.5.1",
    "local-repository-provider": "^6.5.37",
    "nbonjour": "^3.6.3",
    "remove-sensible-values": "^1.0.6",
    "utf-8-validate": "^5.0.2",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "ava": "^3.8.2",
    "builtin-modules": "^3.1.0",
    "c8": "^7.1.2",
    "documentation": "^13.0.0",
    "got": "^11.1.4",
    "mock-repository-provider": "^5.1.63",
    "npm-pkgbuild": "^6.11.19",
    "rollup": "^2.10.9",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-executable": "^1.6.0",
    "semantic-release": "^17.0.8",
    "x-hub-signature": "^1.2.0"
  },
  "optionalDependencies": {
    "sd-daemon": "^1.0.2"
  },
  "engines": {
    "node": ">=14.3.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64",
    "arm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/hook-ci.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/hook-ci/issues"
  },
  "homepage": "https://github.com/arlac77/hook-ci#readme",
  "config": {
    "base": "/services/ci/api",
    "socket": "/run/${name}/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "groups": "webhook",
    "hooks": "pacman/hooks.sh",
    "backup": "etc/${name}/config.json",
    "depends": {
      "redis": ">=5.0.9-1",
      "systemd": ">=245.4",
      "nginx-mainline": ">=1.17.10"
    },
    "installdir": "/services/${name}",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-cli-app",
      "arlac77/template-github",
      "arlac77/template-nginx",
      "arlac77/template-systemd",
      "arlac77/template-pacman"
    ]
  }
}
