{
  "name": "hook-ci",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "./src/hook-ci-cli.mjs",
  "description": "simple ci to be triggered by git hooks",
  "keywords": [
    "ci",
    "kronos-integration",
    "software delivery",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "hook-ci": "./src/hook-ci-cli.mjs"
  },
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "pkg": "npm-pkgbuild --verbose -Dversion=0.0.1"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^2.1.63",
    "@kronos-integration/interceptor-webhook": "^1.1.45",
    "@kronos-integration/service": "^10.4.20",
    "@kronos-integration/service-admin": "^3.4.55",
    "@kronos-integration/service-authenticator": "^1.6.21",
    "@kronos-integration/service-health": "^5.0.148",
    "@kronos-integration/service-http": "^10.6.107",
    "@kronos-integration/service-ldap": "^4.0.81",
    "@kronos-integration/service-repositories": "^2.0.95",
    "@kronos-integration/service-swarm": "^1.9.86",
    "bitbucket-repository-provider": "^3.10.23",
    "bull": "^4.8.0",
    "execa": "^6.1.0",
    "expression-expander": "^7.0.16",
    "gitea-repository-provider": "^2.1.18",
    "github-repository-provider": "^7.25.64",
    "globby": "^13.1.1",
    "graphql": "^16.0.1",
    "js-yaml": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "local-repository-provider": "^7.2.2",
    "nbonjour": "^3.6.3",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "ava": "^4.1.0",
    "c8": "^7.3.0",
    "got": "^12.0.3",
    "mock-repository-provider": "^6.0.12",
    "npm-pkgbuild": "^8.3.2",
    "semantic-release": "^19.0.2",
    "x-hub-signature": "^1.2.0"
  },
  "peerDependencies": {
    "mf-hosting": "github:arlac77/mf-hosting"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.5.3"
  },
  "engines": {
    "node": ">=16.13.2"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "x64",
    "arm64",
    "arm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/hook-ci.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/hook-ci/issues"
  },
  "homepage": "https://github.com/arlac77/hook-ci#readme",
  "config": {
    "base": "/services/ci/api",
    "socket": "/run/${name}/http/socket"
  },
  "pkg": {
    "content": {
      "/usr/lib/systemd/system/": {
        "base": "systemd"
      },
      "/usr/lib/tmpfiles.d/${name}.conf": "pkg/tmpfiles.conf",
      "/usr/lib/sysusers.d/${name}.conf": "pkg/sysusers.conf",
      "/etc/${name}/config.json": "config/config.json",
      "${installdir}/": [
        {
          "type": "npm-pack"
        },
        {
          "type": "node-modules"
        }
      ],
      "/etc/nginx/sites/common/${name}.conf": "pkg/nginx.conf"
    },
    "hooks": "pkg/hooks.sh",
    "backup": "etc/${name}/config.json",
    "groups": "services",
    "depends": {
      "nginx-mainline": ">=1.21.4",
      "systemd": ">=250.4"
    },
    "group": "services",
    "installdir": "/services/${name}"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild"
        }
      ],
      "@semantic-release/npm"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
