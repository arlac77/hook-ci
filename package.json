{
  "name": "hook-ci",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "module": "src/hook-ci-cli.mjs",
  "description": "simple ci to be triggered by git hooks",
  "keywords": [
    "ci",
    "software delivery"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "hook-ci": "bin/hook-ci"
  },
  "scripts": {
    "cover": "c8 --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/hook-ci-cli.mjs --section=API",
    "lint": "documentation lint src/hook-ci-cli.mjs",
    "package": "npm-pkgbuild --npm-dist --npm-modules pkgbuild pacman makepkg",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "test": "ava"
  },
  "dependencies": {
    "aggregation-repository-provider": "^2.6.16",
    "bufferutil": "^4.0.1",
    "bull": "^3.10.0",
    "commander": "^2.20.0",
    "config-expander": "^11.0.4",
    "execa": "^2.0.3",
    "gitea-repository-provider": "^1.8.12",
    "github-repository-provider": "^7.3.30",
    "globby": "^10.0.1",
    "graphql": "^14.4.2",
    "js-yaml": "^3.13.1",
    "koa": "^2.7.0",
    "koa-better-router": "^2.1.1",
    "koa-bodyparser": "^4.2.1",
    "koa-github-hook-handler": "^1.3.0",
    "koa-graphql": "^0.8.0",
    "koa-mount": "^4.0.0",
    "local-repository-provider": "^6.4.26",
    "nbonjour": "^3.6.3",
    "remove-sensible-values": "^1.0.3",
    "utf-8-validate": "^5.0.2",
    "ws": "^7.1.0"
  },
  "devDependencies": {
    "@semantic-release/exec": "^3.3.5",
    "ava": "^2.2.0",
    "builtin-modules": "^3.1.0",
    "c8": "^5.0.2",
    "documentation": "^11.0.1",
    "esm": "^3.2.25",
    "got": "^9.6.0",
    "markdown-doctest": "^0.9.1",
    "mock-repository-provider": "^5.1.19",
    "npm-pkgbuild": "^6.5.6",
    "rollup": "^1.16.7",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-executable": "^1.5.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "semantic-release": "^15.13.19",
    "x-hub-signature": "^1.2.0"
  },
  "optionalDependencies": {
    "sd-daemon": "^1.0.1"
  },
  "engines": {
    "node": ">=10.16.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/hook-ci.git"
  },
  "files": [
    "bin"
  ],
  "bugs": {
    "url": "https://github.com/arlac77/hook-ci/issues"
  },
  "homepage": "https://github.com/arlac77/hook-ci#readme",
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "ava": {
    "files": [
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  },
  "pacman": {
    "properties": {
      "urlPrefix": "/services/ci/api/"
    },
    "groups": "webhook",
    "install": "pacman/install.sh",
    "backup": "etc/${name}/config.json",
    "depends": {
      "redis": ">=5.0.5-1",
      "systemd": ">=242.0"
    },
    "installdir": "/services/${name}",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    }
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  }
}
