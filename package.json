{
  "name": "hook-ci",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin"
  ],
  "module": "src/hook-ci-cli.mjs",
  "description": "simple ci to be triggered by git hooks",
  "keywords": [
    "ci",
    "software delivery"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "hook-ci": "bin/hook-ci"
  },
  "scripts": {
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/hook-ci-cli.mjs --section=API",
    "lint": "documentation lint src/hook-ci-cli.mjs",
    "package": "npm-pkgbuild --npm-dist --npm-modules pkgbuild pacman makepkg",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "test": "ava"
  },
  "dependencies": {
    "aggregation-repository-provider": "^2.6.36",
    "bitbucket-repository-provider": "^3.3.41",
    "bufferutil": "^4.0.1",
    "bull": "^3.12.1",
    "commander": "^4.0.1",
    "config-expander": "^11.0.7",
    "execa": "^4.0.0",
    "expression-expander": "^7.0.3",
    "gitea-repository-provider": "1.9.10",
    "github-repository-provider": "^7.5.0",
    "globby": "^10.0.1",
    "graphql": "^14.5.8",
    "js-yaml": "^3.13.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-better-router": "^2.1.1",
    "koa-bodyparser": "^4.2.1",
    "koa-github-hook-handler": "^1.4.3",
    "koa-graphql": "^0.8.0",
    "koa-jwt": "^3.6.0",
    "koa-mount": "^4.0.0",
    "ldapts": "^2.0.1",
    "local-repository-provider": "^6.5.0",
    "nbonjour": "^3.6.3",
    "remove-sensible-values": "^1.0.3",
    "utf-8-validate": "^5.0.2",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@semantic-release/exec": "^3.3.8",
    "ava": "^2.4.0",
    "builtin-modules": "^3.1.0",
    "c8": "^6.0.1",
    "documentation": "^12.1.4",
    "esm": "^3.2.25",
    "got": "^10.1.0",
    "markdown-doctest": "^1.0.0",
    "mock-repository-provider": "^5.1.34",
    "npm-pkgbuild": "^6.11.1",
    "rollup": "^1.27.13",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-executable": "^1.5.2",
    "semantic-release": "^15.14.0",
    "x-hub-signature": "^1.2.0"
  },
  "optionalDependencies": {
    "sd-daemon": "^1.0.2"
  },
  "engines": {
    "node": ">=12.14.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64",
    "arm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/hook-ci.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/hook-ci/issues"
  },
  "homepage": "https://github.com/arlac77/hook-ci#readme",
  "config": {
    "base": "/services/ci/api",
    "socket": "/run/${name}/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "groups": "webhook",
    "hooks": "pacman/hooks.sh",
    "backup": "etc/${name}/config.json",
    "depends": {
      "redis": ">=5.0.6-1",
      "systemd": ">=244"
    },
    "installdir": "/services/${name}",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "ava": {
    "files": [
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
