{
  "name": "hook-ci",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "./src/hook-ci-cli.mjs",
  "description": "simple ci to be triggered by git hooks",
  "keywords": [
    "ci",
    "kronos-integration",
    "software delivery",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "hook-ci": "./src/hook-ci-cli.mjs"
  },
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^2.1.65",
    "@kronos-integration/interceptor-webhook": "^1.1.46",
    "@kronos-integration/service": "^10.4.24",
    "@kronos-integration/service-admin": "^3.4.61",
    "@kronos-integration/service-authenticator": "^1.6.30",
    "@kronos-integration/service-health": "^5.0.156",
    "@kronos-integration/service-http": "^10.6.119",
    "@kronos-integration/service-ldap": "^4.0.90",
    "@kronos-integration/service-repositories": "^2.0.121",
    "@kronos-integration/service-swarm": "^1.9.86",
    "bitbucket-repository-provider": "^4.2.10",
    "bull": "^4.8.0",
    "execa": "^6.1.0",
    "expression-expander": "^7.0.18",
    "gitea-repository-provider": "^2.2.10",
    "github-repository-provider": "^7.30.11",
    "globby": "^13.1.2",
    "graphql": "^16.5.0",
    "jsonwebtoken": "^8.5.1",
    "local-repository-provider": "^8.0.12",
    "nbonjour": "^3.6.3",
    "ws": "^8.8.0",
    "yaml": "^2.0.1"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "ava": "^4.3.0",
    "c8": "^7.3.0",
    "got": "^12.1.0",
    "mock-repository-provider": "^6.0.56",
    "npm-pkgbuild": "^10.7.10",
    "semantic-release": "^19.0.3",
    "x-hub-signature": "^1.2.0"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.5.4",
    "mf-hosting": "^1.6.3"
  },
  "engines": {
    "node": ">=18.3.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/hook-ci.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/hook-ci/issues"
  },
  "homepage": "https://github.com/arlac77/hook-ci#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": [
        {
          "type": "npm-pack"
        },
        {
          "type": "node-modules"
        }
      ],
      "${sysusers.config.dir}${name}.conf": "pkg/sysusers.conf",
      "${config.dir}config.json": "config/config.json",
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf",
      "${tmpfiles.config.dir}${name}.conf": "pkg/tmpfiles.conf",
      "${systemd.unit.dir}${name}.service": "pkg/${name}.service",
      "${systemd.unit.dir}${name}.socket": "pkg/${name}.socket"
    },
    "hooks": "pkg/hooks.sh",
    "backup": "${config.dir}config.json",
    "http.path": "/services/ci/api"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --verbose"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
