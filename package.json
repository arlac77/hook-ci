{
  "name": "hook-ci",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "./src/hook-ci-cli.mjs",
  "description": "simple ci to be triggered by git hooks",
  "keywords": [
    "ci",
    "kronos-integration",
    "software delivery",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "hook-ci": "./src/hook-ci-cli.mjs"
  },
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^2.1.75",
    "@kronos-integration/interceptor-webhook": "^1.1.57",
    "@kronos-integration/service": "^10.4.41",
    "@kronos-integration/service-admin": "^3.4.65",
    "@kronos-integration/service-authenticator": "^1.6.46",
    "@kronos-integration/service-health": "^5.0.176",
    "@kronos-integration/service-http": "^10.6.140",
    "@kronos-integration/service-ldap": "^4.0.110",
    "@kronos-integration/service-repositories": "^2.0.149",
    "@kronos-integration/service-swarm": "^1.9.86",
    "bitbucket-repository-provider": "^4.4.34",
    "bull": "^4.8.0",
    "execa": "^6.1.0",
    "expression-expander": "^7.1.3",
    "gitea-repository-provider": "^2.4.38",
    "github-repository-provider": "^7.33.40",
    "globby": "^13.1.3",
    "graphql": "^16.6.0",
    "jsonwebtoken": "^9.0.0",
    "local-repository-provider": "^8.1.10",
    "nbonjour": "^3.6.3",
    "ws": "^8.12.0",
    "yaml": "^2.0.1"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "ava": "^5.1.1",
    "c8": "^7.3.0",
    "got": "^12.5.3",
    "mock-repository-provider": "^6.2.35",
    "npm-pkgbuild": "^11.0.2",
    "semantic-release": "^20.0.2",
    "x-hub-signature": "^2.1.1"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.5.6",
    "mf-hosting": "^1.8.2"
  },
  "engines": {
    "node": ">=18.13.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/hook-ci"
  },
  "bugs": {
    "url": "https://github.com/arlac77/hook-ci/issues"
  },
  "homepage": "https://github.com/arlac77/hook-ci#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": [
        {
          "type": "npm-pack"
        },
        {
          "type": "node-modules"
        }
      ],
      "${sysusers.config.dir}${name}.conf": "pkg/sysusers.conf",
      "${config.dir}config.json": "config/config.json",
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf",
      "${tmpfiles.config.dir}${name}.conf": "pkg/tmpfiles.conf",
      "${systemd.unit.dir}${name}.service": "pkg/${name}.service",
      "${systemd.unit.dir}${name}.socket": "pkg/${name}.socket"
    },
    "hooks": "pkg/hooks.sh",
    "backup": "${config.dir}config.json",
    "http.path": "/services/ci/api"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            },
            {
              "path": "dist/*.rpm",
              "label": "RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
