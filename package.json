{
  "name": "hook-ci",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "./src/hook-ci-cli.mjs",
  "description": "simple ci to be triggered by git hooks",
  "keywords": [
    "ci",
    "kronos-integration",
    "software delivery",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "hook-ci": "./src/hook-ci-cli.mjs"
  },
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^2.1.58",
    "@kronos-integration/interceptor-webhook": "^1.1.39",
    "@kronos-integration/service": "^10.4.17",
    "@kronos-integration/service-admin": "^3.4.47",
    "@kronos-integration/service-authenticator": "^1.6.11",
    "@kronos-integration/service-health": "^5.0.137",
    "@kronos-integration/service-http": "^10.6.94",
    "@kronos-integration/service-ldap": "^4.0.73",
    "@kronos-integration/service-repositories": "^2.0.92",
    "@kronos-integration/service-swarm": "^1.9.86",
    "bitbucket-repository-provider": "^3.10.10",
    "bufferutil": "^4.0.5",
    "bull": "^4.0.0",
    "config-expander": "^12.0.5",
    "execa": "^6.0.0",
    "expression-expander": "^7.0.14",
    "gitea-repository-provider": "^1.16.67",
    "github-repository-provider": "^7.25.24",
    "globby": "^13.1.1",
    "graphql": "^16.0.1",
    "js-yaml": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-better-router": "^2.1.1",
    "koa-bodyparser": "^4.3.0",
    "koa-github-hook-handler": "^1.4.7",
    "koa-graphql": "^0.12.0",
    "koa-jwt": "^4.0.0",
    "koa-mount": "^4.0.0",
    "local-repository-provider": "^7.2.0",
    "nbonjour": "^3.6.3",
    "utf-8-validate": "^5.0.7",
    "ws": "^8.4.2"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "ava": "^4.0.1",
    "c8": "^7.3.0",
    "got": "^12.0.1",
    "mock-repository-provider": "^5.5.131",
    "npm-pkgbuild": "^7.25.2",
    "semantic-release": "^19.0.2",
    "x-hub-signature": "^1.2.0"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.5.3"
  },
  "engines": {
    "node": ">=14.18.3"
  },
  "os": [
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64",
    "arm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/hook-ci.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/hook-ci/issues"
  },
  "homepage": "https://github.com/arlac77/hook-ci#readme",
  "config": {
    "base": "/services/ci/api",
    "socket": "/run/${name}/http/socket"
  },
  "pkg": {
    "group": "services",
    "hooks": "pkg/hooks.sh",
    "backup": "etc/${name}/config.json",
    "installdir": "/services/${name}",
    "content": {
      "/usr/lib/systemd/system/": {
        "base": "systemd"
      },
      "/usr/lib/tmpfiles.d/${name}.conf": "pkg/tmpfiles.conf",
      "/usr/lib/sysusers.d/${name}.conf": "pkg/sysusers.conf",
      "/etc/${name}/config.json": "config/config.json",
      "${installdir}/": [
        {
          "type": "npm-pack"
        },
        {
          "type": "node-modules"
        }
      ],
      "/etc/nginx/sites/common/${name}.conf": "pkg/nginx.conf"
    },
    "depends": {
      "nginx-mainline": ">=1.21.4",
      "systemd": ">=250.3"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "verifyConditionsCmd": "which makepkg",
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
