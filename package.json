{
  "name": "hook-ci",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "module": "src/hook-ci-cli.mjs",
  "description": "simple ci to be triggered by git hooks",
  "keywords": [
    "npm",
    "template",
    "webhook",
    "github"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "hook-ci": "bin/hook-ci"
  },
  "scripts": {
    "cover": "c8 --temp-directory build/coverage ava && c8 report -r lcov --temp-directory build/coverage",
    "docs": "documentation readme src/hook-ci-cli.mjs --section=API",
    "lint": "documentation lint src/hook-ci-cli.mjs",
    "package": "npm-pkgbuild pkgbuild pacman makepkg",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "test": "ava"
  },
  "dependencies": {
    "bull": "^3.5.2",
    "execa": "^1.0.0",
    "github-webhook-handler": "^0.7.0",
    "micro": "^9.3.3",
    "sd-notify": "^2.5.1",
    "systemd": "^0.3.1"
  },
  "devDependencies": {
    "ava": "^1.0.1",
    "c8": "^3.2.1",
    "documentation": "^9.1.1",
    "esm": "^3.0.84",
    "got": "^9.5.0",
    "markdown-doctest": "^0.9.1",
    "npm-pkgbuild": "^3.3.3",
    "rollup": "^1.0.2",
    "rollup-plugin-cleanup": "^3.1.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-executable": "^1.3.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "semantic-release": "^15.13.2",
    "x-hub-signature": "^1.2.0"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/hook-ci.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/hook-ci/issues"
  },
  "homepage": "https://github.com/arlac77/hook-ci#readme",
  "release": {},
  "ava": {
    "files": [
      "tests/*-test.js",
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "js",
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  },
  "pacman": {
    "groups": "webhook",
    "install": "pacman/install.sh",
    "depends": {
      "redis": ">=5.0.3"
    },
    "installdir": "/services/${name}"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  }
}
