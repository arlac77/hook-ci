{
  "name": "hook-ci",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "module": "src/hook-ci-cli.mjs",
  "description": "simple ci to be triggered by git hooks",
  "keywords": [
    "ci"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "hook-ci": "bin/hook-ci"
  },
  "scripts": {
    "cover": "c8 --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/hook-ci-cli.mjs --section=API",
    "lint": "documentation lint src/hook-ci-cli.mjs",
    "package": "npm-pkgbuild --npm-dist --npm-modules pkgbuild pacman makepkg",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "test": "ava"
  },
  "dependencies": {
    "bull": "^3.9.0",
    "commander": "^2.20.0",
    "config-expander": "^10.3.2",
    "execa": "^1.0.0",
    "globby": "^9.1.0",
    "koa": "^2.7.0",
    "koa-better-router": "^2.1.1",
    "koa-github-hook-handler": "^1.1.0"
  },
  "devDependencies": {
    "@semantic-release/exec": "^3.3.3",
    "ava": "^1.4.1",
    "c8": "^4.1.4",
    "documentation": "^10.1.0",
    "esm": "^3.2.22",
    "got": "^9.6.0",
    "markdown-doctest": "^0.9.1",
    "npm-pkgbuild": "^5.3.2",
    "rollup": "^1.11.3",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-executable": "^1.4.5",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "semantic-release": "^15.13.12",
    "x-hub-signature": "^1.2.0"
  },
  "optionalDependencies": {
    "sd-daemon": "^1.0.1"
  },
  "engines": {
    "node": ">=10.15.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/hook-ci.git"
  },
  "files": [
    "bin"
  ],
  "bugs": {
    "url": "https://github.com/arlac77/hook-ci/issues"
  },
  "homepage": "https://github.com/arlac77/hook-ci#readme",
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "ava": {
    "files": [
      "tests/*-test.js",
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "js",
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  },
  "pacman": {
    "groups": "webhook",
    "install": "pacman/install.sh",
    "backup": "etc/${name}/config.json",
    "depends": {
      "redis": ">=5.0.4-1",
      "systemd": ">=242.0"
    },
    "installdir": "/services/${name}",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json"
    }
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  }
}
