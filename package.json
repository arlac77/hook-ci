{
  "name": "hook-ci",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "./src/hook-ci-cli.mjs",
  "description": "simple ci to be triggered by git hooks",
  "keywords": [
    "ci",
    "kronos-integration",
    "software delivery",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "hook-ci": "./src/hook-ci-cli.mjs"
  },
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^2.1.52",
    "@kronos-integration/interceptor-webhook": "^1.1.32",
    "@kronos-integration/service": "^10.4.8",
    "@kronos-integration/service-admin": "^3.4.40",
    "@kronos-integration/service-authenticator": "^1.5.38",
    "@kronos-integration/service-health": "^5.0.127",
    "@kronos-integration/service-http": "^10.6.67",
    "@kronos-integration/service-ldap": "^4.0.56",
    "@kronos-integration/service-repositories": "^2.0.80",
    "@kronos-integration/service-swarm": "^1.9.86",
    "bitbucket-repository-provider": "^3.9.1",
    "bufferutil": "^4.0.1",
    "bull": "^3.18.0",
    "config-expander": "^12.0.1",
    "execa": "^5.1.1",
    "expression-expander": "^7.0.11",
    "gitea-repository-provider": "^1.16.17",
    "github-repository-provider": "^7.23.8",
    "globby": "^12.0.1",
    "graphql": "^15.3.0",
    "js-yaml": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-better-router": "^2.1.1",
    "koa-bodyparser": "^4.3.0",
    "koa-github-hook-handler": "^1.4.7",
    "koa-graphql": "^0.9.0",
    "koa-jwt": "^4.0.0",
    "koa-mount": "^4.0.0",
    "local-repository-provider": "^7.0.97",
    "nbonjour": "^3.6.3",
    "utf-8-validate": "^5.0.5",
    "ws": "^8.2.0"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.3",
    "ava": "^3.15.0",
    "c8": "^7.3.0",
    "got": "^11.8.2",
    "mock-repository-provider": "^5.5.79",
    "npm-pkgbuild": "^6.12.45",
    "semantic-release": "^17.4.5",
    "x-hub-signature": "^1.2.0"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.5.1"
  },
  "engines": {
    "node": ">=14.17.5"
  },
  "os": [
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64",
    "arm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/hook-ci.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/hook-ci/issues"
  },
  "homepage": "https://github.com/arlac77/hook-ci#readme",
  "config": {
    "base": "/services/ci/api",
    "socket": "/run/${name}/http/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "groups": "webhook",
    "hooks": "pacman/hooks.sh",
    "backup": "etc/${name}/config.json",
    "depends": {
      "redis": ">=6.0.9",
      "systemd": ">=249.1",
      "nginx-mainline": ">=1.21.1"
    },
    "installdir": "/services/${name}",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf",
      "/usr/lib/sysusers.d/${name}.conf": "pacman/sysusers.conf",
      "/etc/nginx/sites/common/${name}.conf": "pacman/nginx.conf"
    },
    "group": "services",
    "content-provider": {
      "systemd": {
        "units": {
          "${name}": "systemd/${name}*"
        }
      }
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "verifyConditionsCmd": "which makepkg",
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ],
      "@semantic-release/npm"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
